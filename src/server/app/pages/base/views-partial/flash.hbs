{{#if messages.errors}}
  <div class="alert alert-danger fade in">
    <button type="button" data-dismiss="alert" class="close"><i class="fa fa-text fa-times-circle-o"></i></button>
    {{#each messages.errors}}
      <div>{{this.msg}}</div>
    {{/each}}
  </div>
{{/if}}

